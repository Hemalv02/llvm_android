@@ -1924,6 +1924,10 @@ template <class ELFT> void LinkerDriver::link(opt::InputArgList &args) {
   // They also might be exported if referenced by DSOs.
   script->declareSymbols();
 
+  // Handle undefined symbols in DSOs.
+  if (!config->shared)
